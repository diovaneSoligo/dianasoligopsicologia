    }

    @media only screen and (max-width:479px) {
        .hidden-mobile,.visible-tablet,.visible-desktop { display:none !important; }
    }*/
</style>
<div id="overlay">
    <video class="visible-desktop" id="hero-vid" poster="img/capa.png" autoplay loop muted>
        <source type="video/webm" src="video/videohome.webm"></source>
        <source type="video/mp4" src="video/videohome.mp4"></source>
    </video>
</div>
